@{
    ViewData["Title"] = "Calculadora";
}

<style>
    input#bt {
        width: 50px;
    }

    input#visor {
        width: 210px;
    }
</style>

<h1 class="display-4">Calculadora</h1>
<div class="text-center">

    <table border="1">
        <tr>
            <td colspan="4">
                <input type="text" readonly="readonly" value="@ViewBag.Visor" id="visor" />
            </td>
        </tr>
        <tr>
            <td><input type="submit" value="CE" id="bt" /></td>
            <td><input type="submit" value="+/-" id="bt" /></td>
            <td><input type="submit" value="x" id="bt" /></td>
            <td><input type="submit" value="/" id="bt" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="7" id="bt" /></td>
            <td><input type="submit" value="8" id="bt" /></td>
            <td><input type="submit" value="9" id="bt" /></td>
            <td><input type="submit" value="+" id="bt" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="4" id="bt" /></td>
            <td><input type="submit" value="5" id="bt" /></td>
            <td><input type="submit" value="6" id="bt" /></td>
            <td><input type="submit" value="-" id="bt" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="1" id="bt" /></td>
            <td><input type="submit" value="2" id="bt" /></td>
            <td><input type="submit" value="3" id="bt" /></td>
            <td rowspan="2"><input style="height:62px" type="submit" value="=" id="bt" /></td>
        </tr>
        <tr>
            <td colspan="2"><input style="width:102px" type="submit" value="0" id="bt" /></td>

            <td><input type="submit" value="," id="bt" /></td>


        </tr>


    </table>
</div>
